
BoxLayout:
    orientation: 'vertical'

    Label:
        test: 'Enter your name'
        font_size: 24

    TextInput:
        id: user_input
        hint_text: "Tell me your name"
        multiline: False

    Button:
        text: 'Greet'
        on_press: output_label.text = 'Hello, ' +user_input.text

    Label:
        id: output_label
        text: 'Welcome!'

    CheckBox:
        id: check_label
        active: True
    Label:
        text: "Check me"

    Slider:
        min: 0
        max: 100
        value: 50
    Switch:
        id: Switch
    Label:
        text: "Toggle me"

    ProgressBar:
        max: 100
        value: 75


    GridLayout:
        cols: 3

        Button:
            text: '1'
        Button:
            text: '2'
        Button:
            text: '3'
        Button:
            text: '4'
        Button:
            text: '5'
        Button:
            text: '6'

    FloatLayout:
        Button:
            text: "top left"
            size_hint: 0.2, 0.1
            pos_hint: {'x': 0.4, "y": 0.45}

    ScreenManager:
        id: screen_manager
        transition: NoTransition()

    Screen: 
    name: 'Home_screen'

    Button:
        text: 'Go to settings'
        on_press: screen_manager.current = 'settings_screen'
